@model WebApp.ViewModels.ProductViewModel; 

<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modify Product</title>
</head>
<body>
    <h1>Update Product</h1>
    <div class="col-lg-6">
        <div class="row">
            <form asp-action="UpdateProduct" asp-route-id="@Model.ProductID" method="post">
                <!-- Input field for product name -->
                <div class="col-12 mt-4">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <!-- Input field for product image -->
                <div class="col-12 mt-4 form-control">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" class="form-control" required />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <!-- Text area for product description -->
                <div class="col-12 mt-4">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" required></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Two-column layout for price and quantity -->
                <div class="d-flex row">
                    <!-- Input field for product price -->
                    <div class="col-6 mt-4">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" required />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <!-- Input field for product quantity -->
                    <div class="col-6 mt-4">
                        <label asp-for="Quantity" class="control-label"> Quantity </label>
                        <input asp-for="Quantity" class="form-control" min="0" type="number" required />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>

<div class="col-12 mt-4">
    <label asp-for="Category" class="control-label">Category</label>
    <select asp-for="Category" class="form-control" required>
        <option value="Rings">Rings</option>
        <option value="Bracelets">Bracelets</option>
        <option value="Watches">Watches</option>
    </select>
    <span asp-validation-for="Category" class="text-danger"></span>
</div>


                <div class="col-12 mt-4">
    <label asp-for="Size" class="control-label">Size (Rings, Bracelets and Watches)</label>
    <select asp-for="Size" class="form-control" required>
        <option value="S">S</option>
        <option value="M">M</option>
        <option value="L">L</option>
        <option value="XL">XL</option>
    </select>
    <span asp-validation-for="SizeR" class="text-danger"></span>
</div>

                <!-- Input field for product color -->
                <div class="col-12 mt-4">
                    <label asp-for="Color" class="control-label"></label>
                    <input asp-for="Color" class="form-control" required />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>

                <!-- Submit button to save changes -->
                <div class="col-12 mt-4">
                    <input class="mt-2 btn btn-outline-dark w-100" type="submit" value="Save Changes" />
                    <!-- Cancel button to return to Home/Index action -->
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark w-100 mt-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
