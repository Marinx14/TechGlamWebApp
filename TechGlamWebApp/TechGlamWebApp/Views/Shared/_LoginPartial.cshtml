@using Microsoft.AspNetCore.Identity
@using WebApp.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


<!-- 
    This partial view represents the login partial view that is included in the shared layout view.
    It contains the navigation bar with the logo and the login/register links.
-->

<nav class="navbar">
    <a class="navbar-brand" href="#">
        <!-- Logo image -->
        <img src="~/images/Immagine WhatsApp 2024-06-12 ore 11.44.15_e7d253bb.jpg" alt="Tech Glam">
    </a>
</nav>

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}